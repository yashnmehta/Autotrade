/* ── Global Dialog ── */
QDialog#CustomizeDialog {
  background-color: #ffffff;
  color: #1e293b;
  font-family: "Segoe UI", Tahoma, sans-serif;
  font-size: 12px;
}

/* ── Tab Widget ── */
QTabWidget::pane {
  border: 1px solid #e2e8f0;
  border-radius: 4px;
  background: #ffffff;
  padding: 6px;
}
QTabBar::tab {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-bottom: none;
  padding: 6px 18px;
  margin-right: 2px;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  color: #475569;
  font-weight: 500;
}
QTabBar::tab:selected {
  background: #ffffff;
  color: #1e40af;
  border-bottom: 2px solid #2563eb;
  font-weight: 600;
}
QTabBar::tab:hover:!selected {
  background: #dbeafe;
}

/* ── GroupBox ── */
QGroupBox {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 6px;
  margin-top: 14px;
  padding: 10px 8px 8px 8px;
  font-weight: 600;
  color: #1e293b;
}
QGroupBox::title {
  subcontrol-origin: margin;
  subcontrol-position: top left;
  padding: 0 6px;
  color: #1e40af;
  font-weight: 600;
}

/* ── Labels ── */
QLabel {
  color: #1e293b;
  font-size: 12px;
}
QLabel#titleLabel {
  font-size: 14px;
  font-weight: 700;
  color: #1e293b;
}

/* ── Combo / Spin / LineEdit ── */
QComboBox, QSpinBox, QFontComboBox {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 4px;
  padding: 4px 8px;
  color: #1e293b;
  min-height: 24px;
}
QComboBox:focus, QSpinBox:focus, QFontComboBox:focus {
  border-color: #3b82f6;
}
QComboBox::drop-down {
  border: none;
  width: 20px;
}

/* ── CheckBox / RadioButton ── */
QCheckBox, QRadioButton {
  color: #1e293b;
  spacing: 6px;
  font-size: 12px;
}
QCheckBox::indicator, QRadioButton::indicator {
  width: 16px;
  height: 16px;
}

/* ── Buttons ── */
QPushButton {
  border: 1px solid #e2e8f0;
  border-radius: 4px;
  padding: 6px 14px;
  background: #f8fafc;
  color: #1e293b;
  font-weight: 500;
  min-height: 26px;
}
QPushButton:hover {
  background: #dbeafe;
  border-color: #3b82f6;
}
QPushButton:pressed {
  background: #bfdbfe;
}
QPushButton#resetButton {
  background: #fef2f2;
  color: #dc2626;
  border-color: #fca5a5;
}
QPushButton#resetButton:hover {
  background: #fee2e2;
}

/* ── Color Swatch Button ── */
QPushButton#colorPickerButton {
  min-width: 60px;
  min-height: 28px;
  border: 2px solid #e2e8f0;
  border-radius: 4px;
}

/* ── List Widget (attribute list) ── */
QListWidget {
  background: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 4px;
  color: #1e293b;
  outline: none;
}
QListWidget::item {
  padding: 4px 8px;
  border-bottom: 1px solid #f1f5f9;
}
QListWidget::item:selected {
  background: #dbeafe;
  color: #1e40af;
}
QListWidget::item:hover:!selected {
  background: #f1f5f9;
}

/* ── Preview Frame ── */
QFrame#previewFrame {
  border: 1px solid #e2e8f0;
  border-radius: 6px;
  background: #f8fafc;
  padding: 8px;
}

/* ── Dialog Button Box ── */
QDialogButtonBox QPushButton {
  min-width: 80px;
}

/* ── Separator line ── */
QFrame[frameShape="4"] {
  background-color: #e2e8f0;
  max-height: 1px;
  min-height: 1px;
}
